{
    "root": true,
    "extends": [
      "plugin:prettier/recommended",
      "prettier/flowtype",
      "prettier/react",
      "prettier/standard"
    ],
    "plugins": ["jest"],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "no-bitwise": "off",
      "no-lonely-if": "off",
      "class-methods-use-this": "off",
      "arrow-body-style": "off",
      "no-loop-func": "off"
    }
  }
  